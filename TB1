from telegram import Update, InlineKeyboardButton, InlineKeyboardMarkup
from telegram.ext import (
    Application,
    CommandHandler,
    CallbackQueryHandler,
    MessageHandler,
    ContextTypes,
    ConversationHandler,
    filters
)
import logging
import os

# ØªÙ†Ø¸ÛŒÙ…Ø§Øª Ù„Ø§Ú¯
logging.basicConfig(
    format='%(asctime)s - %(name)s - %(levelname)s - %(message)s',
    level=logging.INFO
)
logger = logging.getLogger(__name__)

# Ù…Ø±Ø§Ø­Ù„ Ú¯ÙØªÚ¯Ùˆ
START, PHONE, NAME = range(3)

async def start(update: Update, context: ContextTypes.DEFAULT_TYPE) -> int:
    keyboard = [[InlineKeyboardButton("âœ… Ù‚Ø¨ÙˆÙ„ Ù‚ÙˆØ§Ù†ÛŒÙ†", callback_data='accept')]]
    await update.message.reply_text(
        "ðŸ“œ Ù‚ÙˆØ§Ù†ÛŒÙ† Ø±Ø¨Ø§Øª...",
        reply_markup=InlineKeyboardMarkup(keyboard)
    )
    return START

# ... (Ø¨Ù‚ÛŒÙ‡ ØªÙˆØ§Ø¨Ø¹ Ø±Ø§ Ø§ÛŒÙ†Ø¬Ø§ Ù‚Ø±Ø§Ø± Ø¯Ù‡ÛŒØ¯)

def main() -> None:
    TOKEN = os.getenv('TOKEN')
    app = Application.builder().token(TOKEN).build()
    
    conv_handler = ConversationHandler(
        entry_points=[CommandHandler('start', start)],
        states={
            START: [CallbackQueryHandler(request_phone, pattern='^accept$')],
            PHONE: [MessageHandler(filters.CONTACT, get_phone)],
            NAME: [MessageHandler(filters.TEXT & ~filters.COMMAND, get_name)]
        },
        fallbacks=[]
    )
    
    app.add_handler(conv_handler)
    app.run_polling()

if __name__ == '__main__':
    main()
